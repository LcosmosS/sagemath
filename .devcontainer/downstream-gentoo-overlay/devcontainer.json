// See https://aka.ms/devcontainer.json for format details.
{
    "name": "gentoo overlay 'sage-on-gentoo' downstream Sage",
    "image": "sheerluck/sage-on-gentoo-stage4",
    "onCreateCommand": "EXTRA_SYSTEM_PACKAGES='sagemath' EXTRA_SAGE_PACKAGES='notebook pip' .devcontainer/onCreate.sh",
    // There's no SAGE_LOCAL, so remove the symlink 'prefix'.
    "updateContentCommand": "rm -f prefix && ln -sf /usr venv",
    "extensions": [
        "ms-python.python"
    ]
}
